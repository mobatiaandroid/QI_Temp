<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leader_constraint"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="45dp">


    <TextView
        android:id="@+id/notifi_index_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="1."
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Notifi_Head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ellipsize="marquee"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="DATA"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notifi_index_count"
        app:layout_constraintStart_toEndOf="@+id/notifi_index_count"
        app:layout_constraintTop_toTopOf="@+id/notifi_index_count" />

